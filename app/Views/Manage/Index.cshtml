@using Server.ServicesConnected.Auth.Models.ManageViewModels
@model  Server.ServicesConnected.Auth.Models.ManageViewModels.IndexViewModel
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Index);
}
@*<h4>@ViewData["Title"]</h4>*@
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <h3></h3>
            <div class="form-group">
                <label asp-for="Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true">
                            <span class="glyphicon glyphicon-ok text-success"></span>
                        </span>
                    </div>
                }
                else
                {
                    <input asp-for="Email" class="form-control" />
                        <button asp-action="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                }

            </div>
            <h3></h3>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <h3></h3>
            <button type="submit" class="btn btn-default  account-form-button">Save</button>

            <div class="danger-container">
                <p><span asp-validation-for="Email" class="text-danger"></span></p>
                <p><span asp-validation-for="PhoneNumber" class="text-danger"></span></p>
            </div>
        </form>
    </div>
</div>

