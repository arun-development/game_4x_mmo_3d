@using Server.Infrastructure
@{
    Layout = "/Views/Shared/_SiteLayout.cshtml";
    ViewData.Add(PageKeyVal.BodyCssKey, PageKeyVal.ManageBodyCssVal);
}
<div class="container site-form-group">
    <h2>Manage your account</h2>

    <div>
        <h4>Change your account settings</h4>
        <hr/>
        <div class="row">
            <div class="col-md-3">
                @await Html.PartialAsync("_ManageNav")
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>
 
</div>


@section footerHtmlAndTemplates{
    <cache expires-on="@DateTime.Now.AddDays(30)">
        @await Html.PartialAsync("footer/footer")
    </cache>

}