@using Server.ServicesConnected.Auth.Models.ManageViewModels
@model Server.ServicesConnected.Auth.Models.ManageViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OldPassword" class="display-none"></label>
                <input asp-for="OldPassword" class="form-control" placeholder="OldPassword"/>
                    
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="display-none"></label>
                <input asp-for="NewPassword" class="form-control"  placeholder="NewPassword"/>
                    
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="display-none"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword"/>
                   
            </div>
            <h3></h3>
            <button type="submit" class="btn btn-default account-form-button">Update password</button>
            <div class="danger-container">
                <p><span asp-validation-for="OldPassword" class="text-danger"></span></p>
                <p><span asp-validation-for="NewPassword" class="text-danger"></span></p>
                <p><span asp-validation-for="ConfirmPassword" class="text-danger"></span></p>
            </div>
        </form>
    </div>
</div>

 